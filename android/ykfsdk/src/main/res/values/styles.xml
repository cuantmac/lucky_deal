<resources>

    <!--默认主题颜色 -->
    <style name="KFSdkAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ykf_theme_color_default">@color/ykf_color_default</item>
        <item name="ykf_theme_color_default_light_1">@color/ykf_color_default_light_1</item>
        <item name="ykf_theme_color_bg_default">@color/ykf_color_bg_default</item>
        <item name="ykf_theme_text_color_default">@color/ykf_theme_text_color_default</item>
        <item name="ykf_theme_text_dark_default">@color/ykf_theme_text_dark_default</item>
        <item name="ykf_theme_chat_activity_default">@color/ykf_chat_activity_default</item>
        <item name="ykf_theme_chat_activity_bg_default">@color/ykf_chat_activity_bg_default</item>
    </style>

    <!-- 末行对齐方式 -->
    <declare-styleable name="AlignTextView">
        <attr name="align" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <!--第二套主题颜色 -->
    <style name="KFSdkAppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="ykf_theme_color_default">@color/ykf_color_default_1</item>
        <item name="ykf_theme_color_default_light_1">@color/ykf_color_default_1_light_1</item>
        <item name="ykf_theme_color_bg_default">@color/ykf_color_bg_default_1</item>
        <item name="ykf_theme_text_color_default">@color/ykf_theme_text_color_default_1</item>
        <item name="ykf_theme_text_dark_default">@color/ykf_theme_text_dark_default_1</item>
        <item name="ykf_theme_chat_activity_default">@color/ykf_chat_activity_default_1</item>
        <item name="ykf_theme_chat_activity_bg_default">@color/ykf_chat_activity_bg_default_1</item>
    </style>


    <style name="Theme_AudioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>
    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--NavigationIcon的颜色-->
        <item name="colorControlNormal">?attr/ykf_theme_color_default</item>
        <item name="android:textColorPrimary">@color/all_black</item>
    </style>

    <!-- 标点转换 -->
    <declare-styleable name="CBAlignTextView">
        <attr name="punctuationConvert" format="boolean"/>
    </declare-styleable>
    <style name="Theme_Investigate">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--公共的dialog样式-->
    <style name="commonDialog" parent="@android:style/Theme.Dialog">
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--是否显示title-->
        <item name="android:windowNoTitle">true</item>
        <!--设置dialog的背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--显示区域背景是否透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- pop进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/pop_dialog_out</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>




</resources>
